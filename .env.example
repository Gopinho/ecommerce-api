# Database Configuration
# Para MySQL:
# DATABASE_URL="mysql://username:password@localhost:3306/database_name"
# Para PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
# Para SQLite (desenvolvimento):
# DATABASE_URL="file:./dev.db"
DATABASE_URL="mysql://user:password@localhost:3306/ecommerce_db"

# JWT Secrets - IMPORTANTE: Gerar secrets seguros em produção
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"

# Stripe Payment Configuration (obter em https://stripe.com/docs/keys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Redis Configuration (opcional - para cache)
REDIS_URL="redis://localhost:6379"

# Email Configuration (opcional - para envio de emails)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@yourapp.com"

# Telegram Bot Configuration (opcional - para notificações)
TELEGRAM_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"
TELEGRAM_ERROR_CHAT_ID="your-error-notification-chat-id"

# Server Configuration
PORT=4000
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Security
BCRYPT_SALT_ROUNDS=10

# Session Configuration
SESSION_SECRET="your-session-secret-key"

# API Documentation
API_DOCS_ENABLED=true

# Monitoring
ENABLE_METRICS=false
SENTRY_DSN=""

# Development
DEBUG=false
LOG_LEVEL="info"